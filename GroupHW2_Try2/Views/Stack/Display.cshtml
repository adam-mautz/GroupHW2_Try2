
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>StackView</title>
    <link href="~/Content/myStyleSheet.css" rel="stylesheet" />
</head>
<body>

    <div class="subList">
        <ul>
            <li><a href="@Url.Action("AddOne", "Stack")">Add one time to stack</a> </li><!--makes a link to the AddOne function in the Stack Controller-->
            <li><a href="@Url.Action("AddHuge", "Stack")">Add Huge List of Items to Stack</a></li><!--makes a link to the AddHuge function in the Stack Controller-->
            <li><a href="@Url.Action("Display", "Stack")"> Display Stack </a></li><!--makes a link to the Display function in the Stack Controller-->
            <li><a href="@Url.Action("Delete", "Stack")">Delete from Stack</a></li><!--makes a link to the Delete function in the Stack Controller-->
            <li><a href="@Url.Action("Clear", "Stack")">Clear Stack</a></li><!--makes a link to the Clear function in the Stack Controller-->
            <li><a href="@Url.Action("Search", "Stack")">Search Stack</a></li><!--makes a link to the Search function in the Stack Controller-->
            <li><a href="@Url.Action("Search", "Stack")">Return to Main Menu</a></li><!--links back to Home Controller index function that launches the View-->
        </ul>
    </div>
    <div>
        @if (ViewBag.MyStack.Count > 0)
        {
            foreach (var sData in ViewBag.MyStack)
            {
                <p>@sData</p>
            }
        }
        else
        {
            <p> There are no items in the Stack to display</p>
        }
    </div>
</body>
</html>
</body>
</html>
